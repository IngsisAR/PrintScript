#!/bin/sh

echo "Checking format"

./gradlew ktlintFormat

if [ $? -ne 0 ]; then
  echo "ktlintFormat task failed, aborting commit."
  exit 1
fi

#add formatting changes, avoiding unversioned files
git add -u

echo "Checking build"

./gradlew build
if [ $? -ne 0 ]; then
  echo "Build task failed, aborting commit."
  exit 1
fi

echo "new version"
echo "Ready for commit"
